<%= form_with model: @nuzlocke, data: { turbo: false } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :game_id, 'Game' %>
  <%= f.collection_select :game_id,
                          @games,
                          :id,
                          :pretty_title %>

  <%= f.submit %>
<% end %>