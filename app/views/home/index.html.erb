<% if @current_user %>
  <div class="dashboard">
    <div class="dashboard__nuzlockes">
      <h2>
        Your Active Nuzlockes
      </h2>
      <ul>
        <% @active_nuzlockes.each do |nuzlocke| %>
          <div>
            <%= link_to nuzlocke.name, nuzlocke_path(nuzlocke) %>
            <%= nuzlocke.game.pretty_title %>
            <%= "#{nuzlocke.attempts_count} Attempts" %>
          </div>
          
        <% end %>
      </ul>
      <%= turbo_frame_tag 'new-nuzlocke'  do %>
        <%= link_to 'Start New Nuzlocke', new_nuzlocke_path %>
      <% end %>
    </div>
    <div class="dashboard__followed-users-activity">
      <h2>
        Followed Users Activity
      </h2>
    </div>
    <div class="dashboard__all-users-activity">
      <h2>
        All Users Activity
      </h2>
    </div>
  </div>
<% end %>