<%= form_with model: @area_pokemon, data: { turbo_frame: 'area-info' } do |f| %>
    <%= f.label :pokemon_id %>
    <%= f.collection_select :pokemon_id, @pokemon, :id, :pretty_name %>

    <%= f.label :encounter_method %>
    <%= f.text_field :encounter_method %>

    <%= f.label :encounter_rate %>
    <%= f.number_field :encounter_rate %>

    <%= f.hidden_field :area_id, value: @area.id %>

    <%= f.submit "Add Pokemon to #{@area.name}"%>
<% end %>